<!DOCTYPE html>
<html>
  <head>
    <title>MiProyectoRuby</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Tus scripts -->
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha384-GLhlTQ8iK16H3oZl5n/+rNEIg4ZZk4F5T8Zl5I83MDmzfM9T06LZ4fGf5GIfY8l/" crossorigin="anonymous">

  </head>
 
  <body >
  
  <h2>Bienvenido</h2>

  <%= notice %>
  <%= alert %>

  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
     <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="navbar-nav">
       <% if user_signed_in? %>
        <%= button_to 'Cerrar sesión', destroy_user_session_path, method: :delete, class: 'btn-link', data: { turbolinks: false } %>
        <%= button_to 'Eliminar cuenta', delete_account_path, method: :delete, class: 'btn-link' %>
        <%= link_to 'Crear Links Cortos', class: 'nav-link' %> 
        <%= link_to 'Mis Links Cortos', class: 'nav-link' %>
        <%= link_to 'Mi Perfil',show_profile_path, class: 'nav-link' %>
       <% else %>
        <%= link_to 'Iniciar sesión', new_user_session_path, class: 'nav-link' %>
        <%= link_to 'Registrarse', new_user_registration_path, class: 'nav-link' %>
      
       <% end %>
      </div>
     </div>
    </div>
  </nav>
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <%= yield %>
          </div>
      
        <!-- Footer -->
        <footer class="sticky-footer bg-white">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
               <span>Copyright &copy; Your Website 2020</span>
            </div>
          </div>
        </footer>
        <!-- End of Footer -->
     
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>
  </body>
</html>